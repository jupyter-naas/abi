# Example ABI Configuration
# Copy this to config.yaml and customize for your needs

config:
  workspace_id: "your-workspace-id"
  storage_name: "abi"
  github_project_repository: "your-org/your-repo"
  github_support_repository: "your-org/support-repo"
  github_project_id: 1
  triple_store_path: "storage/triplestore"
  api_title: "ABI API"
  api_description: "API for ABI, your Artificial Business Intelligence"
  logo_path: "assets/logo.png"
  favicon_path: "assets/favicon.ico"
  space_name: "abi"
  cors_origins:
    - "http://localhost:9879"

# AI Network Configuration
ai_network:
  # Core AI Models - Foundation language models
  core:
    enabled: true
    modules:
      - name: "abi"
        enabled: true
      - name: "chatgpt"
        enabled: true # Set to false to disable ChatGPT integration
      - name: "claude"
        enabled: true # Set to false to disable Claude integration
      # Add other models as needed - set enabled: true to activate them
      - name: "deepseek"
        enabled: false
      - name: "gemini"
        enabled: false

  # Custom Modules - User-defined extensions
  custom:
    enabled: true
    auto_discover: true
    modules: []

  # Marketplace - All marketplace content (domains + applications)
  marketplace:
    enabled: true # Set to false to disable all marketplace modules
    modules:
      # Domain experts - Enable the ones you need for your use case
      - name: "software-engineer"
        enabled: true # Essential for development teams
      - name: "data-engineer"
        enabled: true
      - name: "project-manager"
        enabled: false
      
      # Applications - External service integrations
      - name: "github"
        enabled: true
      - name: "naas"
        enabled: true
      - name: "arxiv"
        enabled: false

  # Module Loading Settings
  loading:
    fail_on_error: true # Stop loading if a module fails
    parallel_loading: false # Load modules sequentially for now
    retry_attempts: 3 # Number of retry attempts for failed modules
    timeout_seconds: 30 # Timeout for module loading

# Scheduled Pipelines
pipelines:
  - name: "github.GithubIssuesPipeline"
    cron: "0 0 * * *" # Daily at midnight
    parameters:
      - github_repository: "https://github.com/your-org/your-repo"