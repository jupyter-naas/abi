    intentMapping:validationPattern "^http://ontology\\.naas\\.ai/.+/[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" ;
    intentMapping:validationFormat "person_uri_1" .

intentMapping:personUri2Arg a intentMapping:QueryArgument ;
