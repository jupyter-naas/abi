@prefix abi: <http://ontology.naas.ai/abi/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@prefix capability: <http://ontology.naas.ai/abi/capability/> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
<http://ontology.naas.ai/abi/<http://ontology.naas.ai/abi/PerplexityOntology> a owl:Ontology ;
    owl:imports <http://ontology.naas.ai/abi/AIAgentOntology> ;
    dc:title "Perplexity AI Agent Ontology"@en ;
    dc:description "BFO-grounded ontology for Perplexity AI models and processes"@en ;
    dc:created "20250812T101446"@en .


#################################################################
#    BFO Bucket 1: Material Entities (WHAT/WHO)
#################################################################

# Material Infrastructure (BFO_0000040)
abi:PerplexityServerInfrastructure a bfo:BFO_0000040 ;
    rdfs:label "Perplexity Server Infrastructure"@en ;
    rdfs:comment "Material infrastructure supporting Perplexity systems for research discovery"@en ;
    bfo:BFO_0000171 abi:PerplexityDataCenterRegion . # located in

abi:AcademicDatabaseAccessHardware a bfo:BFO_0000040 ;
    rdfs:label "Academic Database Access Hardware"@en ;
    rdfs:comment "Specialized hardware for accessing academic databases and research repositories"@en ;
    bfo:BFO_0000171 abi:PerplexityDataCenterRegion . # located in

#################################################################
#    BFO Bucket 2: Qualities (WHAT-LIKE)
#################################################################

# Qualities that inhere in material entities (BFO_0000019)
abi:PerplexityResearchDiscoveryAccuracy a bfo:BFO_0000019 ;
    rdfs:label "Perplexity Research Discovery Accuracy"@en ;
    rdfs:comment "Quality representing accuracy of research discovery"@en ;
    bfo:BFO_0000197 abi:PerplexityServerInfrastructure . # inheres in

abi:PerplexityAcademicSourceCredibility a bfo:BFO_0000019 ;
    rdfs:label "Perplexity Academic Source Credibility"@en ;
    rdfs:comment "Quality representing credibility of academic sources"@en ;
    bfo:BFO_0000197 abi:AcademicDatabaseAccessHardware . # inheres in

#################################################################
#    BFO Bucket 3: Realizable Entities (WHAT-CAN-BE)
#################################################################

# Capabilities that inhere in material entities (BFO_0000017)
abi:PerplexityResearchDiscoveryCapability a bfo:BFO_0000017 ;
    rdfs:label "Perplexity Research Discovery Capability"@en ;
    rdfs:comment "Capability for research article discovery and academic search"@en ;
    bfo:BFO_0000197 abi:PerplexityServerInfrastructure ; # inheres in
    bfo:BFO_0000218 abi:AcademicDatabaseAccessHardware . # has material basis

#################################################################
#    BFO Bucket 7: Generically Dependent Continuants (INFORMATION)
#################################################################

# AI Models as software patterns (BFO_0000031) - CONCRETE INSTANCE
abi:SonarProModel a bfo:BFO_0000031 ;
    rdfs:label "Sonar Pro"@en ;
    rdfs:comment "Perplexity's research-optimized model with academic database access and citation capabilities"@en ;
    skos:example "Sonar Pro neural network, 100K token context, academic search optimization"@en ;
    abi:hasModelId "sonar-pro"@en ;
    abi:hasContextWindow "100000"^^xsd:integer ;
    abi:hasOwner "perplexity"@en ;
    abi:hasDescription "Perplexity's research-optimized model with academic database access and citation capabilities"@en ;
    bfo:BFO_0000084 abi:PerplexityServerInfrastructure . # generically depends on

# System Prompt as behavioral pattern (BFO_0000031) - CONCRETE INSTANCE
abi:PerplexitySystemPrompt a bfo:BFO_0000031 ;
    rdfs:label "Perplexity System Prompt"@en ;
    rdfs:comment "System prompt defining Perplexity's role in research discovery"@en ;
    skos:example "Role: research discoverer, Tasks: article finding, Guidelines: academic search"@en ;
    abi:hasRole "You are Perplexity, an AI assistant specialized in research discovery and finding academic articles."@en ;
    abi:hasObjective "Discover and retrieve relevant research articles and academic content"@en ;
    abi:hasTasks "Research discovery; Article finding; Academic search; Citation retrieval"@en ;
    bfo:BFO_0000084 abi:PerplexityServerInfrastructure . # generically depends on

# Intent Mappings as routing patterns (BFO_0000031) - CONCRETE INSTANCE
abi:PerplexityIntentMappings a bfo:BFO_0000031 ;
    rdfs:label "Perplexity Intent Mappings"@en ;
    rdfs:comment "Intent-to-tool routing patterns for Perplexity agent"@en ;
    skos:example "find research → perplexity_search, discover articles → perplexity_discover"@en ;
    abi:hasIntentCount "16"^^xsd:integer ;
    bfo:BFO_0000084 abi:PerplexityServerInfrastructure . # generically depends on

# AI Agent as software pattern (BFO_0000031) - CONCRETE INSTANCE
abi:PerplexityAgent a abi:AIAgent ;
    rdfs:label "Perplexity"@en ;
    rdfs:comment "Perplexity AI agent specialized in research discovery and academic article finding"@en ;
    skos:example "Perplexity service using Sonar Pro for research discovery"@en ;
    abi:hasSpecializedRole "Article discovery and research"@en ;
    abi:usesModel abi:SonarProModel ;
    abi:usesSystemPrompt abi:PerplexitySystemPrompt ;
    abi:usesIntentMappings abi:PerplexityIntentMappings ;
    bfo:BFO_0000084 abi:PerplexityServerInfrastructure . # generically depends on

#################################################################
#    BFO Bucket 5: Immaterial Entities (WHERE)
#################################################################

# Spatial regions (BFO_0000141)
abi:PerplexityDataCenterRegion a bfo:BFO_0000141 ;
    rdfs:label "Perplexity Data Center Region"@en ;
    rdfs:comment "Spatial region encompassing Perplexity data center locations"@en .

abi:AcademicRepositoryBoundary a bfo:BFO_0000141 ;
    rdfs:label "Academic Repository Boundary"@en ;
    rdfs:comment "Immaterial boundary defining academic and institutional repositories"@en .

#################################################################
#    BFO Bucket 6: Temporal Regions (WHEN)
#################################################################

# Temporal regions (BFO_0000008)
abi:PerplexityResearchSession a bfo:BFO_0000008 ;
    rdfs:label "Perplexity Research Session"@en ;
    rdfs:comment "Temporal region during which research discovery occurs"@en .

#################################################################
#    BFO Bucket 4: Processes (HOW-IT-HAPPENS)
#################################################################

# Specialized processes that realize capabilities (BFO_0000015)
abi:PerplexityResearchDiscoveryProcess a abi:ResearchDiscoveryProcess ;
    rdfs:label "Perplexity Research Discovery Process"@en ;
    rdfs:comment "Process of discovering and retrieving research articles using Perplexity"@en ;
    bfo:BFO_0000057 abi:PerplexityServerInfrastructure ; # has participant
    bfo:BFO_0000055 abi:PerplexityResearchDiscoveryCapability ; # realizes
    bfo:BFO_0000108 abi:PerplexityResearchSession . # exists at

# Note: Additional processes can be defined as needed, following the same BFO pattern

