@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix bfo: <http://purl.obolibrary.org/obo/bfo.owl#> .
@prefix abi: <http://ontology.naas.ai/abi/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

# Assistant Base Class
abi:Assistant a owl:Class ;
    rdfs:label "AI Assistant"@en ;
    rdfs:subClassOf bfo:BFO_0000023 ;
    skos:definition "A specialized AI agent that performs specific organizational functions"@en .

# OpenData Assistant
abi:OpenDataAssistant a owl:Class ;
    rdfs:label "OpenData Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in handling open data sources and transformations"@en ;
    abi:hasTool "data_fetcher" ;
    abi:hasCapability "Fetch and process open datasets from various sources" .

# Content Assistant
abi:ContentAssistant a owl:Class ;
    rdfs:label "Content Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in content creation and management"@en ;
    abi:hasTool "image_replicator" ;
    abi:hasCapability "Generate and replicate images for content" .

# Growth Assistant
abi:GrowthAssistant a owl:Class ;
    rdfs:label "Growth Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in growth and user acquisition"@en ;
    abi:hasTool "linkedin_profile_fetcher" ;
    abi:hasCapability "Extract and analyze LinkedIn profiles" .

# Sales Assistant
abi:SalesAssistant a owl:Class ;
    rdfs:label "Sales Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in sales operations and pipeline management"@en ;
    abi:hasCapability "Manage sales pipeline and customer relationships" .

# Operations Assistant
abi:OperationsAssistant a owl:Class ;
    rdfs:label "Operations Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in operational tasks and GitHub management"@en ;
    abi:hasTool "github_repository_analyzer" ;
    abi:hasCapability "Analyze and manage GitHub repositories" .

# Finance Assistant
abi:FinanceAssistant a owl:Class ;
    rdfs:label "Finance Assistant"@en ;
    rdfs:subClassOf abi:Assistant ;
    skos:definition "Assistant specialized in financial analysis and reporting"@en ;
    abi:hasCapability "Process financial data and generate reports" .

# Tool Definitions
abi:Tool a owl:Class ;
    rdfs:label "Tool"@en ;
    rdfs:subClassOf bfo:BFO_0000031 .

abi:DataFetcher a abi:Tool ;
    rdfs:label "Data Fetcher"@en ;
    skos:definition "Tool for fetching and processing open data sources" .

abi:ImageReplicator a abi:Tool ;
    rdfs:label "Image Replicator"@en ;
    skos:definition "Tool for generating and replicating images" .

abi:LinkedInProfileFetcher a abi:Tool ;
    rdfs:label "LinkedIn Profile Fetcher"@en ;
    skos:definition "Tool for extracting LinkedIn profile data" .

abi:GitHubRepositoryAnalyzer a abi:Tool ;
    rdfs:label "GitHub Repository Analyzer"@en ;
    skos:definition "Tool for analyzing GitHub repositories" . 