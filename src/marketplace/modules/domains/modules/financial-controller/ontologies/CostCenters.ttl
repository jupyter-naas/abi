@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology Declaration
: a owl:Ontology ;
    rdfs:label "CostCenters Ontology" ;
    rdfs:comment "ðŸš§ NOT FUNCTIONAL YET - Organizational cost centers and allocation ontology" .

# Core Classes
:CostCentersEntity a owl:Class ;
    rdfs:label "CostCenters Entity" ;
    rdfs:comment "Base class for costcenters entities" .

:CostCentersProcess a owl:Class ;
    rdfs:label "CostCenters Process" ;
    rdfs:comment "Processes related to costcenters" .

:CostCentersMetric a owl:Class ;
    rdfs:label "CostCenters Metric" ;
    rdfs:comment "Metrics and measurements for costcenters" .

# Core Properties
:hasType a owl:ObjectProperty ;
    rdfs:domain :CostCentersEntity ;
    rdfs:range xsd:string ;
    rdfs:label "has type" .

:hasValue a owl:DatatypeProperty ;
    rdfs:domain :CostCentersMetric ;
    rdfs:range xsd:decimal ;
    rdfs:label "has value" .

:relatedTo a owl:ObjectProperty ;
    rdfs:domain :CostCentersEntity ;
    rdfs:range :CostCentersEntity ;
    rdfs:label "related to" .

