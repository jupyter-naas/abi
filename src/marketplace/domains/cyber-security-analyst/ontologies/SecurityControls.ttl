# ðŸš§ NOT FUNCTIONAL YET - Ontology Template
# SecurityControls Ontology for Cyber Security Analyst Domain
# Comprehensive security controls and compliance framework ontology

@prefix : <http://naas.ai/ontology/cyber-security-analyst/securitycontrols#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology Declaration
: a owl:Ontology ;
    rdfs:label "SecurityControls Ontology" ;
    rdfs:comment "ðŸš§ NOT FUNCTIONAL YET - Comprehensive security controls and compliance framework ontology" .

# Core Security Control Classes
:SecurityControl a owl:Class ;
    rdfs:label "Security Control" ;
    rdfs:comment "Safeguard or countermeasure to protect against threats" .

:ControlFramework a owl:Class ;
    rdfs:label "Control Framework" ;
    rdfs:comment "Structured set of security controls and guidelines" .

:ComplianceRequirement a owl:Class ;
    rdfs:label "Compliance Requirement" ;
    rdfs:comment "Regulatory or standard requirement for security" .

:SecurityPolicy a owl:Class ;
    rdfs:label "Security Policy" ;
    rdfs:comment "High-level statement of security objectives and rules" .

:SecurityProcedure a owl:Class ;
    rdfs:label "Security Procedure" ;
    rdfs:comment "Detailed steps to implement security controls" .

# Control Types by Function
:PreventiveControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Preventive Control" ;
    rdfs:comment "Control that prevents security incidents" .

:DetectiveControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Detective Control" ;
    rdfs:comment "Control that detects security incidents" .

:CorrectiveControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Corrective Control" ;
    rdfs:comment "Control that corrects security incidents" .

:CompensatingControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Compensating Control" ;
    rdfs:comment "Alternative control when primary control is not feasible" .

# Control Types by Implementation
:TechnicalControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Technical Control" ;
    rdfs:comment "Technology-based security control" .

:AdministrativeControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Administrative Control" ;
    rdfs:comment "Policy and procedure-based security control" .

:PhysicalControl a owl:Class ;
    rdfs:subClassOf :SecurityControl ;
    rdfs:label "Physical Control" ;
    rdfs:comment "Physical security control" .

# Specific Technical Controls
:AccessControl a owl:Class ;
    rdfs:subClassOf :TechnicalControl ;
    rdfs:label "Access Control" ;
    rdfs:comment "Control over who can access resources" .

:Encryption a owl:Class ;
    rdfs:subClassOf :TechnicalControl ;
    rdfs:label "Encryption" ;
    rdfs:comment "Cryptographic protection of data" .

:Firewall a owl:Class ;
    rdfs:subClassOf :TechnicalControl ;
    rdfs:label "Firewall" ;
    rdfs:comment "Network traffic filtering control" .

:AntiMalware a owl:Class ;
    rdfs:subClassOf :TechnicalControl ;
    rdfs:label "Anti-Malware" ;
    rdfs:comment "Malicious software detection and prevention" .

:IntrusionDetection a owl:Class ;
    rdfs:subClassOf :DetectiveControl ;
    rdfs:label "Intrusion Detection" ;
    rdfs:comment "System to detect unauthorized access attempts" .

:SecurityMonitoring a owl:Class ;
    rdfs:subClassOf :DetectiveControl ;
    rdfs:label "Security Monitoring" ;
    rdfs:comment "Continuous monitoring of security events" .

# Compliance Frameworks
:NISTFramework a owl:Class ;
    rdfs:subClassOf :ControlFramework ;
    rdfs:label "NIST Framework" ;
    rdfs:comment "NIST Cybersecurity Framework" .

:ISO27001 a owl:Class ;
    rdfs:subClassOf :ControlFramework ;
    rdfs:label "ISO 27001" ;
    rdfs:comment "ISO 27001 Information Security Management" .

:CISControls a owl:Class ;
    rdfs:subClassOf :ControlFramework ;
    rdfs:label "CIS Controls" ;
    rdfs:comment "Center for Internet Security Controls" .

:SOC2 a owl:Class ;
    rdfs:subClassOf :ControlFramework ;
    rdfs:label "SOC 2" ;
    rdfs:comment "Service Organization Control 2" .

:PCIDSS a owl:Class ;
    rdfs:subClassOf :ControlFramework ;
    rdfs:label "PCI DSS" ;
    rdfs:comment "Payment Card Industry Data Security Standard" .

# Properties
:implementsControl a owl:ObjectProperty ;
    rdfs:domain :SecurityProcedure ;
    rdfs:range :SecurityControl ;
    rdfs:label "implements control" .

:belongsToFramework a owl:ObjectProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range :ControlFramework ;
    rdfs:label "belongs to framework" .

:hasControlID a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:string ;
    rdfs:label "has control ID" .

:hasEffectiveness a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:decimal ;
    rdfs:label "has effectiveness" .

:hasImplementationStatus a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:string ;
    rdfs:label "has implementation status" .

:mitigatesRisk a owl:ObjectProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:string ;
    rdfs:label "mitigates risk" .

:hasComplianceMapping a owl:ObjectProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range :ComplianceRequirement ;
    rdfs:label "has compliance mapping" .

:requiresReview a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:boolean ;
    rdfs:label "requires review" .

:hasOwner a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:string ;
    rdfs:label "has owner" .

:hasTestingFrequency a owl:DatatypeProperty ;
    rdfs:domain :SecurityControl ;
    rdfs:range xsd:string ;
    rdfs:label "has testing frequency" .

# Security Architecture Patterns
:DefenseInDepth a owl:Class ;
    rdfs:label "Defense in Depth" ;
    rdfs:comment "Layered security approach" .

:ZeroTrust a owl:Class ;
    rdfs:label "Zero Trust" ;
    rdfs:comment "Never trust, always verify security model" .

:SecurityByDesign a owl:Class ;
    rdfs:label "Security by Design" ;
    rdfs:comment "Building security into systems from the start" .

# Control Maturity Levels
:InitialMaturity a owl:Class ;
    rdfs:label "Initial Maturity" ;
    rdfs:comment "Ad-hoc, reactive security controls" .

:ManagedMaturity a owl:Class ;
    rdfs:label "Managed Maturity" ;
    rdfs:comment "Documented and managed security controls" .

:DefinedMaturity a owl:Class ;
    rdfs:label "Defined Maturity" ;
    rdfs:comment "Standardized security controls" .

:OptimizedMaturity a owl:Class ;
    rdfs:label "Optimized Maturity" ;
    rdfs:comment "Continuously improved security controls" .

